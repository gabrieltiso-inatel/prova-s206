		{
			"name": "Listar usuários com delay",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Tempo de resposta é de aproximadamente 3 segundos\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.above(3000);",
							"});",
							"",
							"pm.test(\"Dados contém o valor da página e array possui tamanho esperado\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.page).to.eql(2);",
							"    pm.expect(jsonData.data.length).to.eql(6);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://reqres.in/api/users?delay=3&page=2",
					"protocol": "https",
